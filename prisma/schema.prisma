generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clients {
  id         String       @id @default(uuid())
  username   String       @unique
  password   String
  Deliveries Deliveries[]

  @@map("clients")
}

model Deliverymen {
  id         String       @id @default(uuid())
  username   String       @unique
  password   String
  Deliveries Deliveries[]

  @@map("deliverymen")
}

model Deliveries {
  id             String   @id @default(uuid())
  item_name      String
  id_client      String
  id_deliveryman String
  created_at     DateTime @default(now())
  end_at         DateTime @default(now())

  Client Clients @relation(fields: [id_client], references: [id])

  Deliverymen Deliverymen @relation(fields: [id_deliveryman], references: [id])

  @@map("deliveries")
}
